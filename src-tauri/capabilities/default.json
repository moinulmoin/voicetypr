{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "VoiceTyper permissions",
  "windows": ["main", "pill"],
  "permissions": [
    "core:default",
    "core:window:allow-create",
    "core:window:allow-center",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-close",
    "core:window:allow-set-focus",
    "opener:default",
    "store:default",
    "global-shortcut:default",
    "dialog:default",
    "fs:scope-appdata",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-exists",
    "shell:allow-open"
  ]
}
